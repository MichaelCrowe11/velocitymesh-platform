# VelocityMesh Environment Configuration

# Node Environment
NODE_ENV=development

# Server Configuration
HOST=0.0.0.0
FRONTEND_PORT=3000
BACKEND_PORT=3001
AI_ENGINE_PORT=8000

# Database Configuration
DATABASE_URL=postgresql://velocitymesh:password@localhost:5432/velocitymesh

# Redis Configuration  
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production-please-use-strong-key
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# Temporal Configuration
TEMPORAL_ADDRESS=localhost:7233

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Pinecone Configuration (Vector Database)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1-aws

# ChromaDB Configuration
CHROMA_SERVER_HOST=localhost
CHROMA_SERVER_HTTP_PORT=8001

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=velocitymesh-storage

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002

# Logging Configuration
LOG_LEVEL=info

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Development Tools
PGADMIN_EMAIL=admin@velocitymesh.com
PGADMIN_PASSWORD=admin