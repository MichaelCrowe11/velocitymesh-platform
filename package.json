{
  "name": "velocitymesh-platform",
  "version": "0.1.0",
  "description": "Next-generation workflow automation platform with AI-native design",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:ai\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:ai": "cd ai-engine && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f infrastructure/k8s/",
    "setup": "npm run setup:frontend && npm run setup:backend && npm run setup:ai",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && npm install",
    "setup:ai": "cd ai-engine && pip install -r requirements.txt"
  },
  "keywords": [
    "workflow",
    "automation",
    "ai",
    "low-code",
    "integration",
    "orchestration",
    "enterprise"
  ],
  "author": "VelocityMesh Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/velocitymesh/platform.git"
  },
  "devDependencies": {
    "axios": "^1.12.1",
    "concurrently": "^8.2.2",
    "husky": "^9.0.11",
    "ioredis": "^5.7.0",
    "lint-staged": "^15.2.7",
    "pg": "^8.16.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "frontend",
    "backend",
    "ai-engine"
  ],
  "dependencies": {
    "stripe": "^18.5.0"
  }
}
