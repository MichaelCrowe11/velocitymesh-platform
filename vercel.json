{
  "version": 2,
  "name": "velocitymesh-consciousness-platform",
  "builds": [
    {
      "src": "backend/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    },
    {
      "src": "ai-engine/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/index.ts"
    },
    {
      "src": "/consciousness/(.*)",
      "dest": "/ai-engine/quantum_workflow_engine.py"
    },
    {
      "src": "/quantum/(.*)",
      "dest": "/ai-engine/consciousness_interface.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CONSCIOUSNESS_MODE": "quantum",
    "REALITY_SIMULATION": "enabled",
    "QUANTUM_ENTANGLEMENT": "active"
  },
  "regions": ["iad1", "sfo1", "cdg1"],
  "functions": {
    "backend/src/index.ts": {
      "maxDuration": 60,
      "memory": 3008
    },
    "ai-engine/*.py": {
      "maxDuration": 300,
      "memory": 3008,
      "runtime": "python3.9"
    }
  }
}